<h1>Listing categories</h1>

<table>
  <tr>
    <th>Cname</th>
    <th>Desc</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= link_to category.cname,category %></td>
    <td><%= category.desc %></td>
    <td><%= link_to category.user.user_name, category.user %></td>
    <!--<td><%= link_to 'Show', category %></td>-->
    <td><%= link_to 'Edit Category', edit_category_path(category) %></td>
    <td><%= link_to 'Delete Category', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

